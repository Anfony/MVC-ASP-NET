                edtSettings.Text = (Convert.ToDecimal((ViewData["presEstReportado"] ?? 0)) + Convert.ToDecimal((ViewData["presEstGFO"] ?? 0)) == 0 ? 0 : (Convert.ToDecimal((ViewData["presEstAsignado"] ?? 0)) - (Convert.ToDecimal((ViewData["presEstReportado"] ?? 0)) + Convert.ToDecimal((ViewData["presEstGFO"] ?? 0))))).ToString("c");
                edtSettings.ControlStyle.ForeColor = ViewData["StatusRecEst"] != null && ViewData["StatusRecEst"].ToString() == "NO VÁLIDO" ? System.Drawing.Color.Red : System.Drawing.Color.Black;
            }).Render();
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            Html.DevExpress().Label(edtSettings =>
            {
                edtSettings.ControlStyle.CssClass = "label";
                edtSettings.Text = ViewData["StatusRecEst"] == null ? "" : ViewData["StatusRecEst"].ToString();
                edtSettings.ControlStyle.ForeColor = ViewData["StatusRecEst"] != null && ViewData["StatusRecEst"].ToString() == "NO VÁLIDO" ? System.Drawing.Color.Red : System.Drawing.Color.Black;
