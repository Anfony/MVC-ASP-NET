            }).Render();
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            Html.DevExpress().Label(edtSettings =>
            {
                edtSettings.ControlStyle.CssClass = "label";
                edtSettings.Text = (Convert.ToDecimal((ViewData["presFedReportado"] ?? 0)) + Convert.ToDecimal((ViewData["presFedGFO"] ?? 0)) == 0 ? 0 : (Convert.ToDecimal((ViewData["presFedAsignado"] ?? 0)) - (Convert.ToDecimal((ViewData["presFedReportado"] ?? 0)) + Convert.ToDecimal((ViewData["presFedGFO"] ?? 0))))).ToString("c");
