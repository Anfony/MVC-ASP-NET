                edtSettings.Text = ViewData["presProAsignado"] == null ? "-" : Convert.ToDecimal(ViewData["presProAsignado"]).ToString("c");
            }).Render();
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            Html.DevExpress().Label(edtSettings =>
            {
