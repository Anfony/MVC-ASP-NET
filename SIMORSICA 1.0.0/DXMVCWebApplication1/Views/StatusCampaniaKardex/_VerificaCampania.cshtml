            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            Html.DevExpress().Label(edtSettings =>
            {
                edtSettings.ControlStyle.CssClass = "label";
                edtSettings.Text = "Presupuesto por Registrar";
                edtSettings.ControlStyle.Font.Size = 12;
                edtSettings.ControlStyle.ForeColor = System.Drawing.Color.DarkOrange;
            }).Render();
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("</tr>");

            ViewContext.Writer.Write("<tr><td>");
            Html.DevExpress().Label(edtSettings =>
            {
                edtSettings.ControlStyle.CssClass = "label";
                edtSettings.Text = "Federal";
            }).Render();
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            Html.DevExpress().Label(edtSettings =>
            {
                edtSettings.ControlStyle.CssClass = "label";
                edtSettings.Text = ViewData["presFedAsignado"] == null ? "-" : Convert.ToDecimal(ViewData["presFedAsignado"]).ToString("c");
            }).Render();
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            Html.DevExpress().Label(edtSettings =>
            {
                edtSettings.ControlStyle.CssClass = "label";
                edtSettings.Text = ViewData["presFedReportado"] == null ? "-" : Convert.ToDecimal(ViewData["presFedReportado"]).ToString("c");
                edtSettings.ControlStyle.ForeColor = ViewData["StatusRecFed"] != null && ViewData["StatusRecFed"].ToString() == "NO VÁLIDO" ? System.Drawing.Color.Red : System.Drawing.Color.Black;
            }).Render();
            ViewContext.Writer.Write("</td>");

            ViewContext.Writer.Write("<td>");
            Html.DevExpress().Label(edtSettings =>
            {
                edtSettings.ControlStyle.CssClass = "label";
                edtSettings.Text = ViewData["presFedGFO"] == null ? "-" : Convert.ToDecimal(ViewData["presFedGFO"]).ToString("c");
