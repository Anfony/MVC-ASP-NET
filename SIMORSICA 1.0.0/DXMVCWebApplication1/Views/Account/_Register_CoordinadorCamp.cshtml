<div id="CoordinadorCampania" style="position:absolute; left:165px; top:270px; visibility:visible">
    <div class="form-group">
        @Html.Label("Estado: ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("dropDownEstado_CCamp", new SelectList(string.Empty, "Value", "Text"), "Seleccione...", new { @style = "width: 250px" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Instancia Ejecutora: ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("dropDownInstanciaEjecutora_CCamp", new SelectList(string.Empty, "Value", "Text"), "Seleccione...", new { @style = "width: 400px" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Persona: ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("dropDownPersona_CCamp", new SelectList(string.Empty, "Value", "Text"), "Seleccione...", new { @style = "width: 400px" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Rol: ", new { @class = "col-md-2 control-label" })
