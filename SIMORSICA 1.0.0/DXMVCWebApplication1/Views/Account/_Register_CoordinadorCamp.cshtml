            @Html.DropDownList("dropDownPuesto", new SelectList(string.Empty, "Value", "Text"), "--", new { @style = "width: 400px" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Campaña: ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("dropDownCampania", new SelectList(string.Empty, "Value", "Text"), "Selccione...", new { @style = "width: 400px" })
        </div>
