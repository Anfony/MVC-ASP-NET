@model DXMVCWebApplication1.Models.RecuperaContrasenia

@{
    ViewBag.Title = "Recupera contraseña";
}

<div style="position: absolute; margin-left: 0; margin-right: 0; width: 100%; text-align: center; ">
    <div class="container" style="background: #F4F4F4; margin-left: 5em; margin-top: 5em; text-align: left; display: inline-block; border: solid; width: 350px; padding: 50px; border-width: 1px; border-radius: 5px; border-color: dimgrey">
        <section id="loginForm">
            @using (Html.BeginForm("RecuperaContrasenia", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", @Style = "width: 20em;" }))
            {
                @Html.AntiForgeryToken()
                <div>
                    <h4 style="text-align:center">Ingrese sus datos para recuperar su contraseña</h4>
                    <br />
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.usuarioProporcionado, new { @class = "form-control", @PlaceHolder = "Id del Usuario", Title = "Id del Usuario" })
                    @Html.ValidationMessageFor(m => m.usuarioProporcionado)
                    <br />
                    @Html.TextBoxFor(m => m.emailProporcionado, new { @class = "form-control", @PlaceHolder = "Correo electrónico registrado en el sistema", Title = "Correo electrónico registrado en el sistema" })
                    @Html.ValidationMessageFor(m => m.emailProporcionado)
                    @Html.ValidationSummary(true)
                </div>
                <div class="form-group" style="align-content:center">
                    <br />
                    <input type="submit" value="Recupera Contraseña" class="btn btn-default" style="background: #93cce7; font-weight: bold; position:relative; left:50px" />
                    <br />
                </div>
            }
        </section>
    </div>
</div>
